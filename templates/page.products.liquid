<section id="productgrid">
  <div class="flex-container">

    <div class="column40">

      <h3>Featured Collection</h3>
      <h2>{{ settings.pp-s2-h }}</h2></div>



    {% assign collection = collections.featured-products %}
    {% assign products = collections.featured-products.products %}
    {% capture new_row %}

    {% endcapture %}
    {% for product in products limit: limit %}
    <div class="flex-item"><div class="search"><i class="fa fa-search" aria-hidden="true"></i></div><a href="{{ product.url | within: collection }}" title="{{ product.featured_image.alt | escape }}">
      <img {% if settings.align_height %}style="height:{{ settings.collection_height }}px"{% endif %} src="{{ product.featured_image | product_img_url: 'large' }}" alt="{{ product.featured_image.alt | escape }}" />
      </a>
      <div class="nfo">
        <h3>{{ product.title }}</h3>
      </div>
    </div>
    {% endfor %}

    <a href="/collections/{{ settings.feature_product-link }}" class="btn btn-alt wide">{{ settings.featured-link }}</a>

  </div>
</section>





