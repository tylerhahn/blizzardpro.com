    {% if article.image %}
    <img src="{{ article.image | img_url: '1024x1024' }}">
    {% else %}
    <div style="padding: 30px 0; display: block"></div>
    {% endif %}
<div class="article">
  <h1 class="title">
    {{ article.title }}
  </h1>

