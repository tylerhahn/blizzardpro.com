{%- layout none -%}

{%- comment -%}Build a list of collection handles of the collections the product belongs to{%- endcomment -%}
{%- assign limoniapps_discountninja_collections = "" -%}
{%- for collection in product.collections -%} {%- assign limoniapps_discountninja_collections = limoniapps_discountninja_collections | append: collection.handle | append: "," -%} {%- endfor -%}

{%- comment -%}Return Json payload{%- endcomment -%}
{
  "Handle": "{{product.handle}}",
  "Price": {{product.price_min | default: 0}},
  "CompareAtPrice": {{compare_at_price_max | default: 0}},
  "Collections": "{{ limoniapps_discountninja_collections }}",
  "Tags": "{{product.tags | join: ', '}}"
}