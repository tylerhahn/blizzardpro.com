<div class="container w-80 py-5">
  <div class="accordion accordion-flush" id="af-atfull">
    <h2>{{section.settings.Title}}</h2>
    {% for block in section.blocks %}
    <div class="accordion-item">
      <h2 class="accordion-header" id="flush-heading-{{forloop.index}}">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse-{{forloop.index}}" aria-expanded="false" aria-controls="flush-collapse-{{forloop.index}}">
          {{block.settings.question}}
      </button>
      </h2>
      <div id="flush-collapse-{{forloop.index}}" class="accordion-collapse collapse" aria-labelledby="flush-heading-{{forloop.index}}" data-bs-parent="#af-atfull">
        <div class="accordion-body">
          {{block.settings.answer}}
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "header",
      "content": "FAQ"
    },
    {
      "type": "text",
      "id": "Title",
      "label": "Section Title"
    },
    {
        "type": "color",
        "id": "question_bg_color",
        "label": "Question Background Color"
      },
      {
        "type": "color",
        "id": "question_text_color",
        "label": "Question Text Color"
      }
  ],

  "blocks": [
    {
      "type": "text",
      "name": "Q+A",
      "settings": [
        {
          "type": "textarea",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "FAQ",
      "category": "Text"
    }
  ]
}
{% endschema %}

<style>
    .accordion-button {
    background:{{section.settings.question_bg_color}};
    color: {{section.settings.question_text_color}};
    text-transform: inherit;
    font-size: .75em;
    font-weight: 500;
    letter-spacing: 0;
    line-height: 1.5;
    padding: 10px;
    text-align: left;
}

.accordion-body {
    font-size: 1.2em;
    font-family: 'Source Sans Pro';
    padding-bottom: 2em;
}

</style>