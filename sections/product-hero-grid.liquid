<div id="bl-{{section.id}}" style="height: {{section.settings.height}}vh">

    <div class="row h-100">
        <div class="col-sm h-100" style="background-color: {{section.settings.product_color}}">
            <img class="bl-h-g-product" src="{{section.settings.product_image | img_url: 'master'}}" alt="{{section.settings.product_title}}">
            <div class="bl-h-g">
                <h2>{{section.settings.product_title}}</h2>
                <h3>{{section.settings.product_paragraph}}</h2>
                <a class="btn btn-white" href="{{section.settings.product_url}}">{{section.settings.product_url_title}}</a>
            </div>
        </div>
        <div class="col-sm">
            <div class="row h-50">
                <div class="col-sm h-100" style="background-image: url({{section.settings.box_1_image | img_url: 'master'}});">
                    <div class="bl-{{section.id}} bl-h-g">
                        <h2>{{section.settings.box_1_paragraph}}</h2>
                    </div>
                </div>
                <div class="col-sm h-100" style="background-image: url({{section.settings.box_2_image | img_url: 'master'}});">
                    <div class="bl-{{section.id}} bl-h-g">
                        <h2>{{section.settings.box_2_paragraph}}</h2>
                    </div>
                </div>
            </div>
            <div class="row h-50">
                <div class="col-sm h-100" style="background-image: url({{section.settings.box_3_image | img_url: 'master'}});">
                    <div class="bl-{{section.id}} bl-h-g">
                        <h2>{{section.settings.box_3_paragraph}}</h2>
                    </div>
                </div>
                <div class="col-sm h-100" style="background-image: url({{section.settings.box_4_image | img_url: 'master'}});">
                    <div class="bl-{{section.id}} bl-h-g">
                        <h2>{{section.settings.box_4_paragraph}}</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>




