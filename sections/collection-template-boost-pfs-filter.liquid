{% schema %}
{
	"name": "Collection pages",
	"settings": [
		{
			"type": "header",
			"content": "For Filter"
		},
		{
			"type": "radio",
			"id": "switch_layout_filter",
			"label": "Switch Layout Filter",
			"options": [
			{
				"value": "switch_layout_filter_vertical",
				"label": "Vertical Filter"
			},
			{
				"value": "switch_layout_filter_horizontal",
				"label": "Horizonal Filter"
			}],
			"default": "switch_layout_filter_vertical"
		},

		{
			"type": "header",
			"content": "Collection Image"
		},
		{
			"type": "checkbox",
			"id": "show_collection_image",
			"label": "Show Collection Image",
			"default": true
		},
		{
			"type": "checkbox",
			"id": "show_collection_des",
			"label": "Show Collection Description",
			"default": true
		},
		{
			"type": "color",
			"id": "collection_image_text_color",
			"label": "Collection Header Color"
		},
		{
			"type": "header",
			"content": "Product List"
		},
		{
			"type": "range",
			"id": "products_per_page",
			"label": "Products per page",
			"min": 2,
			"max": 50,
			"step": 1,
			"default": 24
		},
		{
			"type": "range",
			"id": "products_per_row",
			"label": "Products per row on Desktop",
			"min": 2,
			"max": 6,
			"step": 1,
			"default": 3
		},
		{
			"type": "range",
			"id": "products_per_row_mobile",
			"label": "Products per row on Mobile",
			"min": 1,
			"max": 3,
			"step": 1,
			"default": 2
		},
		{
			"type": "header",
			"content": "Product Item"
		},
		{
			"type": "select",
			"id": "product_item_type",
			"label": "Product Item Type",
			"options": [
			{
				"value": "grid",
				"label": "Grid"
			},
			{
				"value": "list",
				"label": "List"
			}],
			"default": "grid"
		},
		{
			"type": "select",
			"id": "product_item_layout",
			"label": "Product Item Layout",
			"options": [
			{
				"value": "no-border",
				"label": "No Border (Default)"
			},
			{
				"value": "border-no-padding",
				"label": "Border No Padding"
			},
			{
				"value": "border-no-padding-img",
				"label": "Border No Padding Image"
			},
			{
				"value": "border-has-padding",
				"label": "Border Has Padding"
			}],
			"default": "no-border",
			"info": "Use this setting for Product type Grid"
		},
		{
			"type": "select",
			"id": "text_alignment",
			"label": "Text alignment",
			"options": [
			{
				"value": "left",
				"label": "Left"
			},
			{
				"value": "center",
				"label": "Center"
			},
			{
				"value": "right",
				"label": "Right"
			}],
			"default": "left"
		},
		{
			"type": "checkbox",
			"id": "show_details_when_hovering",
			"label": "Show details when hovering",
			"default": false
		},
		{
			"type": "checkbox",
			"id": "show_vendor",
			"label": "Show product vendor",
			"default": true
		},
		{
			"type": "checkbox",
			"id": "show_price",
			"label": "Show price",
			"default": true
		},
		{
			"type": "checkbox",
			"id": "active_image_swap",
			"label": "Active image swap",
			"default": true
		},
		{
			"type": "checkbox",
			"id": "show_sorting",
			"label": "Enable collection sorting",
			"default": true
		},
		{
			"type": "checkbox",
			"id": "show_product_review",
